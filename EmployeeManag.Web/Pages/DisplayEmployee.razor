@inherits DisplayEmployeeBase

<div class="card m-3" style="min-width: 18rem; max-width: 30.5%;">
    <div class="card-header">
        <input type="checkbox" @onchange="CheckBoxChanged" />
        <h3>@Employee.FirstName @Employee.LastName</h3>
    </div>
    <img class="card-img-top imageThumbnail" src="@Employee.PhotoPath" />
    @if(ShowFooter)
    {
        <div class="card-footer text-center">
            <a href="@($"/detail/{Employee.EmployeeId}")" class="btn btn-primary m-1">View</a>
            <a href="@($"/editemployee/{Employee.EmployeeId}")" class="btn btn-primary m-1">Edit</a>
            <button class="btn btn-danger m-1" @onclick="Delete_User">Delete</button>
        </div>
    }
</div>
<Confirm ConfirmationChange="ConfirmDelete_click" @ref="DeleteConfirmation"></Confirm>